{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@components/*": ["src/shared/components/*"],
      "@constants/*": ["src/shared/constants/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@helpers/*": ["src/shared/utils/helpers/*"],
      "@services/*": ["src/shared/services/*"],
      "@core/*": ["src/shared/core/*"],
      "@modules/*": ["src/modules/*"],
      "@klc/*": ["node_modules/klayar/components/*"]
    },
    "jsx": "react"
  },
  "exclude": ["node_modules", "_next"]
}
